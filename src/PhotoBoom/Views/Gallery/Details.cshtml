@model PhotoBoom.Models.Gallery

@{
    ViewData["Title"] = "Details";
}
<div class="col-md-12 text-center">
<h1>@Html.DisplayFor(model => model.Title)</h1>
<h2>Tags: @Html.DisplayFor(model => model.Tags)</h2>
<img src="../../gallery/@Html.DisplayFor(model => model.ImagePath)" class="img-fluid" style="max-width: 400px;"
    alt="@Html.DisplayFor(model => model.Title)">

<form asp-action="Delete" class="mt-2">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
</div>

@* <a asp-action="Index">Back to List</a> *@
</div>
